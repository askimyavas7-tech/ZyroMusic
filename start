#!/bin/bash
set -e

echo "== Python =="
python --version

echo "== Installing requirements =="
python -m pip install -U pip setuptools wheel
python -m pip install -r requirements.txt

echo "== Quick import tests =="
python -c "import pyrogram; print('pyrogram OK ✅', pyrogram.__version__)"
python -c "import heroku3; print('heroku3 OK ✅')"
python -c "import git; print('GitPython OK ✅')"

echo "== Starting TEAMZYRO =="
python -m TEAMZYRO
